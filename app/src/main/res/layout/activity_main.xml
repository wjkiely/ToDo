<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#323437">

    <EditText
    android:id="@+id/txtItemr"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#C50200"
    android:textSize="32sp"
    android:textColor="#F3F3F3">

    <requestFocus />
</EditText>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtItem"
        android:hint="What do you feel for accomplishing today, ninja?"
        android:inputType="text|textCapSentences|textAutoCorrect"
        android:textSize="32sp"
        android:textColor="#F2F2F2"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:id="@+id/btnAdd"
        android:text="Add your goals here"
        android:textColor="#323437"
        android:textSize="32sp"
        android:background="#F4F4F4"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItems"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:layout_alignParentEnd="false"
        android:headerDividersEnabled="true"
        android:textColor="#F2F2F2"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1050dp"
        android:id="@+id/randomGoal"
        android:text="@string/random_goal"
        android:textSize="32sp"
        android:textColor="#F3F3F3"
        android:background="#C50200"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:layout_marginTop="950dp"
        android:id="@+id/textrandomGoal"
        android:text="@string/random_goal"
        android:textColor="#F3F3F3"/>

</RelativeLayout>
